{
  "name": "lexicon-webapp",
  "description": "Lexicon智能英语学习平台 - 集成SM2记忆算法、AI语音助手、实时对话的现代化英语学习应用",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "keywords": [
    "english-learning",
    "spaced-repetition",
    "sm2",
    "supermemo",
    "ai-voice",
    "cloudbase",
    "react",
    "typescript"
  ],
  "author": "Lexicon Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "clean": "rm -rf dist/",
    "build": "npm run clean && vite build",
    "build:fresh": "npm run clean && npm run build",
    "build:preview": "npm run build && npm run preview",
    "deploy": "npm run build && cloudbase hosting deploy dist",
    "lint": "eslint .",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "start": "serve -s dist -l 3000",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:sm2": "vitest run tests/unit/sm2"
  },
  "dependencies": {
    "@cloudbase/js-sdk": "^2.18.3",
    "@cloudbase/node-sdk": "^3.10.1",
    "@openai/agents": "^0.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "daisyui": "^5.0.35",
    "framer-motion": "^12.23.5",
    "lucide-react": "^0.525.0",
    "openai": "^4.104.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "serve": "^14.2.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^10.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudbase/cli": "^2.7.7",
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.54.1",
    "@stagewise-plugins/react": "^0.6.2",
    "@stagewise/toolbar-react": "^0.6.2",
    "@types/node": "^24.0.12",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
